<% content_for :head do -%>
	<title>Mike Chaliy: <%=h @entry.title %></title>
	<meta name="description" content="<%=h @entry.description %>" />
	<meta name="keywords" content="<%=h @entry.keywords %>" />
<% end -%>
<h1><%= h @entry.title %></h1>
<div class="entry">	
	<%= @entry.content %>
	<p class="entry-info">This entry was posted <%=h time_ago_in_words(@entry.published_on) %>. <%=link_to "Permalink", blog_pretty_entry_url(@entry) %></p>
</div>
<div id="disqus_thread"></div>
<script type="text/javascript" src="http://disqus.com/forums/mikechaliy/embed.js"></script>
<noscript><a href="http://mikechaliy.disqus.com/?url=ref">View the discussion thread.</a></noscript>