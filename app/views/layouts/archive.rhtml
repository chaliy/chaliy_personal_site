            <h1>Mike Chaliy</h1>
        </div>
		
		<% if flash[:notice] -%>
      	<div id="notice"><%= flash[:notice] %></div>
    	<% end -%>

        <div id="content">
        	
			<%= yield :layout %>

        </div>
        
        <div id="footer">
            <p>
                Mike Chaliy &copy; Copyright 2009
            </p>
        </div>

    </div>
</body>
</html>